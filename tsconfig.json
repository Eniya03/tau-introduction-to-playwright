{
    "compilerOptions": {
      "target": "es6",                       // ECMAScript target version
      "module": "commonjs",                  // Module system to use (for Node.js)
      "strict": true,                        // Enable all strict type-checking options
      "esModuleInterop": true,               // Enable interoperability with ES Modules
      "skipLibCheck": true,                  // Skip type checking of declaration files
      "forceConsistentCasingInFileNames": true,  // Enforce consistent casing in filenames
      "types": ["node"]                      // Include Node.js type definitions
    },
    "include": [
      "src/**/*.ts"                          // Include all .ts files in the src directory
    ],
    "exclude": [
      "node_modules"                         // Exclude node_modules from being compiled
    ]
  }
  
  